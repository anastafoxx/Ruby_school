puts 'Какой сегодня день недели?'
day = gets.chomp
if day == 'week day'
    puts 'эх, сколько там еще дней до выходных?'
    number = gets.to_i
    if number == 4
        puts 'значит, сегодня лишь понедельник? время быстро пролетит! держись!'
    elsif number == 3
        puts 'значит, сегодня лишь вторник? время быстро пролетит! держись!'
    elsif number == 2
        puts 'значит, сегодня лишь среда? время быстро пролетит! держись!'
    elsif number == 1
        puts 'вау, уже четверг! осталось совсем немного!'
    elsif number == 0
        puts 'пятница!!! завтра выходной!'
    end
elsif day == 'day off'
    puts 'отлично, какой именно?'
    d = gets.chomp
    if d == 'saturday'
        puts 'шикарно!впереди еще 2 дня отдыха! и какие планы на вечер?'
        plan = gets.chomp
        puts "здорово! #{plan} - прекрасное времяпрепровождение!"
        puts 'а чем займешься завтра?'
        new = gets.chomp
        puts 'понятно! хороших выходных!'
    elsif d == 'sunday'
        puts 'отлично! еще целый выходной день! чем займешься?'
        planb = gets.chomp
        puts "здорово! #{planb} - прекрасное времяпрепровождение!"
    end
end
