puts 'Добро пожаловать в игру!'
puts 'Как тебя зовут?'
input = gets   #переменная для ввода имени
name = input.chomp   #убираем лишние символы в имени
puts "Приветствую, #{name}"

puts 'Я загадал случайное число от 1 до 100'
puts 'Сможешь ли ты угадать его?'
random = rand(100)+1   #случайное число +1, чтобы не попал ноль

num_quesses=0   #отслеживание попыток, на данный момент их 0
quesses_it = false  #признак продолжения игры

until num_quesses==10 || quesses_it 
    #выполняется, пока не станет правдой. То есть, пока мы не достигнем 10 попыток или пока не появится признак завершения игры (true), когда игрок угадает число



    puts "У тебя есть #{10-num_quesses} попыток"  #мы решили, что даем 10 попыток, здесь будет отсчет, сколько осталось
    puts 'Введи число: '
    quess=gets.to_i   #переменная с методом .to_i, чтобы программа видела, что это число, а не наше имя, например
    num_quesses+=1   #прибавляем попытку угадать число

#сравнение указанного числа с загаданным
    if quess<random   #если введенное число меньше загаданного, то ...
        puts 'Упс, твое число меньше загаданного'
    elsif quess>random   #если введенное число больше загаданного, то ...
        puts 'Упс, твое число больше загаданного'
    elsif quess==random    #если введенное число равно загаданному, то ...
        puts "Отличная работа, #{name}"
        puts "Ты справился за #{num_quesses} попыток"   #количество попыток
        quesses_it=true  #признак завершения игры 
    end
end

#сообщаем число, если попыток не осталось
unless quesses_it   #в противном случае
    puts "Увы, ты не смог угадать. Число было задумано #{random}, но не расстраивайся! Все впереди!"
end
