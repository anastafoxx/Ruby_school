class BodyDuilder
    def initialize
        @triceps = 0
        @biceps = 0
        @deltovidka = 0
    end

    def pump(muscle) #раскачка мышц
        case muscle
        when 'triceps'
            @triceps += 1
        when 'biceps'
            @biceps += 1
        when 'deltovidka'
            @deltovidka += 1
        end
    end

    def show_muscles
        #все значения мышц
        puts "бицепсы: #{@biceps}"
        puts "трицепсы: #{@triceps}"
        puts "дельтовидка: #{@deltovidka}"
    end
end
